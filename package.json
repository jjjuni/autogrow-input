{
  "name": "autogrow-inputs",
  "version": "0.1.0",
  "description": "Auto-growing textarea and auto-width input components for React",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./auto-textarea": {
      "types": "./dist/components/AutoGrowTextarea.d.ts",
      "import": "./dist/components/AutoGrowTextarea.js",
      "require": "./dist/components/AutoGrowTextarea.cjs"
    },
    "./auto-input": {
      "types": "./dist/components/AutoWidthInput.d.ts",
      "import": "./dist/components/AutoWidthInput.js",
      "require": "./dist/components/AutoWidthInput.cjs"
    }
  },
  "sideEffects": false,
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@types/react": "^19.1.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsup": "^8.0.1",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --watch --config tsup.config.ts",
    "clean": "rimraf dist"
  }
}